	<copyright>Copyright (C) 2016 - 2019 Perfect Web Team</copyright>
	<license>GPLv3 http://www.gnu.org/licenses/gpl.html</license>
	<author>Perfect Web Team</author>
	<authorEmail>hallo@perfectwebteam.nl</authorEmail>
	<authorUrl>https://perfectwebteam.nl/</authorUrl>
	<version>1.4.1</version>
	<description>PLG_PWTSITEMAP_HIKASHOP_XML_DESCRIPTION</description>

	<files>
		<folder>language</folder>
		<filename plugin="hikashop">hikashop.php</filename>
		<filename>hikashop.xml</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="show_productcode"
					type="radio"
					label="PLG_PWTSITEMAP_HIKASHOP_FIELD_SHOW_PRODUCTCODE"
					description="PLG_PWTSITEMAP_HIKASHOP_FIELD_SHOW_PRODUCTCODE_DESC"
					class="btn-group btn-group-yesno"
					default="0"
				>
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
