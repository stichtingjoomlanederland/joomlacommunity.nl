<?xml version="1.0" encoding="UTF-8"?>
<config>
    <fieldset
            name="safety"
            label="COM_PWTIMAGE_CONFIG_SAFETY"
    >
        <field
                name="guestupload"
                type="radio"
                label="COM_PWTIMAGE_ALLOW_GUEST_IMAGE_UPLOAD"
                description="COM_PWTIMAGE_ALLOW_GUEST_IMAGE_UPLOAD_DESC"
                class="btn-group btn-group-yesno"
                default="0"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fieldset>

    <fieldset name="update">
        <field name="downloadid" type="text" default="" size="50" label="COM_PWTIMAGE_DOWNLOAD_LABEL" description ="COM_PWTIMAGE_DOWNLOAD_DESC" />
    </fieldset>

    <fieldset
            name="permissions"
            label="JCONFIG_PERMISSIONS_LABEL"
            description="JCONFIG_PERMISSIONS_DESC"
    >

        <field
                name="rules"
                type="rules"
                label="JCONFIG_PERMISSIONS_LABEL"
                class="inputbox"
                filter="rules"
                component="com_pwtimage"
                section="component"/>
    </fieldset>
</config>