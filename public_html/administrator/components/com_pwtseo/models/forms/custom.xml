<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="default">
        <field
                name="id"
                type="hidden"
        />

        <field
                name="context"
                type="hidden"
                default="com_pwtseo.custom"
        />

        <field
                name="version"
                type="hidden"
                default="1.5.2"
        />

        <field type="hidden" name="pwtseo_pwtseo_score" default="0" />
    </fieldset>

    <fields name="pwtseo">
        <fieldset name="seofieldset"
                  label="PLG_SYSTEM_PWTSEO_FORM_TAB_LABEL"  addfieldpath="/plugins/system/pwtseo/fields">

            <field
                    name="seo"
                    type="pwtseo"
                    class="test"
            />

            <field name="focus_word" type="hidden" class="js-remove" />
            <field name="facebook_title" type="hidden" class="js-remove" />
            <field name="facebook_description" type="hidden" class="js-remove" />
            <field name="facebook_image" type="hidden" class="js-remove" />
            <field name="twitter_title" type="hidden" class="js-remove" />
            <field name="twitter_description" type="hidden" class="js-remove" />
            <field name="twitter_image" type="hidden" class="js-remove" />
            <field name="twitter_card" type="hidden" class="js-remove" />
            <field name="twitter_site_username" type="hidden" class="js-remove" />
            <field name="google_title" type="hidden" class="js-remove" />
            <field name="google_description" type="hidden" class="js-remove" />
            <field name="google_image" type="hidden" class="js-remove" />
            <field name="adv_open_graph" type="hidden" class="js-remove" />
            <field name="override_page_title" type="hidden" class="js-remove" />
            <field name="expand_og" type="hidden" class="js-remove" />
            <field name="page_title" type="hidden" class="js-remove" />
            <field name="override_canonical" type="hidden" class="js-remove" />
            <field name="canonical" type="hidden" class="js-remove" />
            <field name="articletitleselector" type="hidden" class="js-remove" />
            <field name="datalayers" type="hidden" class="js-remove" />
            <field name="google_rank" type="hidden" class="js-remove" />

            <field type="hidden" name="serptitle" value="" />
            <field type="hidden" name="serpurl" value="" />
            <field type="hidden" name="serpmetadescription" value="" />
            <field type="hidden" name="google_rank" value="0" />
        </fieldset>
    </fields>

    <fieldset name="general">
        <field
                name="url"
                type="text"
                label="COM_PWTSEO_CUSTOMURL_LABEL"
                description="COM_PWTSEO_CUSTOMURL_DESC"
                class="input-xxlarge input-large-text"
                default=""
                required="true"
        />
    </fieldset>
</form>
