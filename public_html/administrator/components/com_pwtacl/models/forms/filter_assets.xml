<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/administrator/components/com_pwtacl/models/fields"/>

    <field
            name="group"
            type="usergrouplist"
            onchange="this.form.submit();"
    >
        <option value="">COM_PWTACL_ASSETS_FILTER_GROUP</option>
    </field>

    <field
            name="user"
            type="sql"
            query="SELECT id, CONCAT(name, ' (', username, ')') as name FROM #__users"
            key_field="id"
            value_field="name"
            onchange="this.form.submit();"
    >
        <option value="">COM_PWTACL_ASSETS_FILTER_USER</option>
    </field>

    <fields name="filter">
        <field
                name="search"
                type="text"
                hint="JSEARCH_FILTER"
                class="js-stools-search-string"
        />

        <field
                name="component"
                type="assetcomponents"
                onchange="this.form.submit();"
        >
            <option value="">COM_PWTACL_ASSETS_FILTER_COMPONENT</option>
        </field>

        <field
                name="category"
                type="list"
                onchange="this.form.submit();"
        >
            <option value="">COM_PWTACL_ASSETS_FILTER_CATEGORY</option>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="item"
                type="list"
                onchange="this.form.submit();"
        >
            <option value="">COM_PWTACL_ASSETS_FILTER_ITEM</option>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fields>

    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="100"
                onchange="this.form.submit();"
        />
    </fields>
</form>