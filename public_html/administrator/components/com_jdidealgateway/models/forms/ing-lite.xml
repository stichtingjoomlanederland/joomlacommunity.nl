<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="ing-lite">

		<field name="psp-spacer" type="spacer" label="COM_ROPAYMENTS_SPACER_PSP" />

		<field name="testmode"
			   type="radio"
			   label="COM_ROPAYMENTS_TEST_MODE_LABEL"
			   description="COM_ROPAYMENTS_TEST_MODE_DESC"
			   required="true"
			   default="1"
			   class="btn-group btn-group-yesno"
			   labelclass="config">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="hashkey"
			   type="text"
			   label="COM_ROPAYMENTS_ING_LITE_HASH_KEY_LABEL"
			   description="COM_ROPAYMENTS_ING_LITE_HASH_KEY_DESC"
			   required="true"
			   size="25"
			   labelclass="config" />

		<field name="merchantId"
			   type="text"
			   label="COM_ROPAYMENTS_ING_LITE_MERCHANT_ID_LABEL"
			   description="COM_ROPAYMENTS_ING_LITE_MERCHANT_ID_DESC"
			   required="true"
			   size="25"
			   labelclass="config" />

		<field name="subId"
			   type="text"
			   label="COM_ROPAYMENTS_ING_LITE_SUB_ID_LABEL"
			   description="COM_ROPAYMENTS_ING_LITE_SUB_ID_DESC"
			   required="true"
			   size="25"
			   default="0"
			   labelclass="config" />

		<field name="description"
			   type="text"
			   label="COM_ROPAYMENTS_ADVANCED_DESCRIPTION_LABEL"
			   description="COM_ROPAYMENTS_ADVANCED_DESCRIPTION_DESC"
			   class="input-xxlarge"
			   required="true"
			   size="50"
			   labelclass="config" />

		<field name="language"
			   type="text"
			   label="COM_ROPAYMENTS_ING_LITE_LANGUAGE_LABEL"
			   description="COM_ROPAYMENTS_ING_LITE_LANGUAGE_DESC"
			   required="true"
			   size="25"
			   default="nl"
			   labelclass="config" />

		<field name="currency"
			   type="text"
			   label="COM_ROPAYMENTS_ING_LITE_CURRENCY_LABEL"
			   description="COM_ROPAYMENTS_ING_LITE_CURRENCY_DESC"
			   required="true"
			   size="25"
			   default="EUR"
			   labelclass="config" />

		<field name="redirect"
			   type="jdideal.waitoptions"
			   label="COM_ROPAYMENTS_WAIT_TIME_LABEL"
			   description="COM_ROPAYMENTS_WAIT_TIME_DESC"
			   required="true"
			   size="1"
			   class="advancedSelect"
			   labelclass="config" />

		<field name="status-spacer" type="spacer" label="COM_ROPAYMENTS_SPACER_STATUS" />

		<field name="pendingStatus"
			   type="jdideal.status"
			   label="COM_ROPAYMENTS_STATUS_PENDING_LABEL"
			   description="COM_ROPAYMENTS_STATUS_PENDING_DESC"
			   required="false"
			   size="1"
			   default="P"
			   class="advancedSelect"
			   labelclass="config" />

		<field name="verifiedStatus"
			   type="jdideal.status"
			   label="COM_ROPAYMENTS_STATUS_SUCCESS_LABEL"
			   description="COM_ROPAYMENTS_STATUS_SUCCESS_DESC"
			   required="false"
			   size="1"
			   default="C"
			   class="advancedSelect"
			   labelclass="config" />

		<field name="cancelledStatus"
			   type="jdideal.status"
			   label="COM_ROPAYMENTS_STATUS_CANCELLED_LABEL"
			   description="COM_ROPAYMENTS_STATUS_CANCELLED_DESC"
			   required="false"
			   size="1"
			   default="X"
			   class="advancedSelect"
			   labelclass="config" />

		<field name="openStatus"
			   type="jdideal.status"
			   label="COM_ROPAYMENTS_STATUS_OPEN_LABEL"
			   description="COM_ROPAYMENTS_STATUS_OPEN_DESC"
			   required="false"
			   size="1"
			   default="P"
			   class="advancedSelect"
			   labelclass="config" />
		<field name="ordernumber-spacer" type="spacer" label="COM_ROPAYMENTS_SPACER_ORDERNUMBERS" />

		<field name="orderNumber"
			   type="jdideal.ordernumber"
			   label="COM_ROPAYMENTS_ORDERNUMBER_LABEL"
			   description="COM_ROPAYMENTS_ORDERNUMBER_DESC"
			   required="false"
			   size="1"
			   default="order_number"
			   class="advancedSelect"
			   labelclass="config" />
	</fieldset>
</form>
