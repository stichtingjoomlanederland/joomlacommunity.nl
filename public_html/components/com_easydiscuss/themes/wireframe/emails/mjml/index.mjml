<mjml>
  <mj-head>
    <mj-breakpoint width="320px" />

    <mj-font name="Roboto" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" />
    <mj-attributes>
      <mj-all padding="0"></mj-all>
      <mj-text font-family="'Roboto', Arial, sans-serif" line-height="30px" font-size="16px"></mj-text>
      <mj-section background-color="#ffffff"></mj-section>
      <mj-class name="preheader" color="#000000" font-size="11px"></mj-class>      
    </mj-attributes>
    <mj-style inline="inline">a { text-decoration: none!important; color:#4e72e2; }</mj-style>
    
    <mj-preview>Preview message here Hello MJML</mj-preview>

  </mj-head>
