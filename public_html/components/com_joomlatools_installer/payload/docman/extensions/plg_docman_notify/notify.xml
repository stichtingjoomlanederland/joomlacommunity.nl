<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="docman" method="upgrade">
    <identifier>plg:docman.notify</identifier>
    <name>plg_docman_notify</name>
    <author>Joomlatools</author>
    <creationDate>May 2016</creationDate>
    <copyright>Copyright (C) 2011 - 2016 Timble CVBA (http://www.timble.net)</copyright>
    <license>GNU GPLv3 - http://www.gnu.org/licenses/gpl.html</license>
    <authorEmail>support@joomlatools.com</authorEmail>
    <authorUrl>www.joomlatools.com</authorUrl>
    <version>3.0.0</version>
    <description>PLG_DOCMAN_NOTIFY_DESCRIPTION</description>
    <files>
        <filename plugin="notify">notify.php</filename>
        <folder>language</folder>
        <folder>view</folder>
    </files>
    <config>
        <fields name="params" addfieldpath="/components/com_docman/forms/fields">
            <fieldset name="basic">
                <field name="notify_document" type="radio" label="PLG_DOCMAN_NOTIFY_NOTIFY_DOCUMENT_OWNER"
                       class="btn-group"
                       description="PLG_DOCMAN_NOTIFY_NOTIFY_DOCUMENT_OWNER_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="notify_document_group" type="radio" label="PLG_DOCMAN_NOTIFY_NOTIFY_DOCUMENT_GROUP"
                       class="btn-group"
                       description="PLG_DOCMAN_NOTIFY_NOTIFY_DOCUMENT_GROUP_DESC" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="notify_category" type="radio" label="PLG_DOCMAN_NOTIFY_NOTIFY_CATEGORY_OWNER"
                       class="btn-group"
                       description="PLG_DOCMAN_NOTIFY_NOTIFY_CATEGORY_OWNER_DESC" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field type="spacer" label="COM_PLUGINS_PLG_DOCMAN_NOTIFY_EVENTS_FIELDSET_LABEL" />
                <field name="notify_add" type="radio" label="PLG_DOCMAN_NOTIFY_NOTIFY_ADD_EVENT"
                       class="btn-group"
                       description="PLG_DOCMAN_NOTIFY_NOTIFY_ADD_EVENT_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="notify_edit" type="radio" label="PLG_DOCMAN_NOTIFY_NOTIFY_EDIT_EVENT"
                       class="btn-group"
                       description="PLG_DOCMAN_NOTIFY_NOTIFY_EDIT_EVENT_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="notify_delete" type="radio" label="PLG_DOCMAN_NOTIFY_NOTIFY_DELETE_EVENT"
                       class="btn-group"
                       description="PLG_DOCMAN_NOTIFY_NOTIFY_DELETE_EVENT_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="notify_submit" type="radio" label="PLG_DOCMAN_NOTIFY_NOTIFY_SUBMIT_EVENT"
                       class="btn-group"
                       description="PLG_DOCMAN_NOTIFY_NOTIFY_SUBMIT_EVENT_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="notify_publish" type="radio" label="PLG_DOCMAN_NOTIFY_NOTIFY_PUBLISH_EVENT"
                       class="btn-group"
                       description="PLG_DOCMAN_NOTIFY_NOTIFY_PUBLISH_EVENT_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="notify_assign" type="radio" label="PLG_DOCMAN_NOTIFY_NOTIFY_ASSIGN_EVENT"
                       class="btn-group"
                       description="PLG_DOCMAN_NOTIFY_NOTIFY_ASSIGN_EVENT_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="notify_download" type="radio" label="PLG_DOCMAN_NOTIFY_NOTIFY_DOWNLOAD_EVENT"
                       class="btn-group"
                       description="PLG_DOCMAN_NOTIFY_NOTIFY_DOWNLOAD_EVENT_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
